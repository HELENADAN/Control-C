#include <iostream>


int main()
{   
    setlocale(0,"");
    int i, j, k, l;
    std::cout << "Введите число - номер горизонтали первой клетки: ";
    std::cin >> i;
    std::cout << "Введите число - номер вертикали первой клетки: ";
    std::cin >> j;
    std::cout << "Введите число - номер горизонтали второй клетки: ";
    std::cin >> k;
    std::cout << "Введите число - номер вертикали второй клетки: ";
    std::cin >> l;

    if ((j - i) % 2 == (k - l) % 2)
        std::cout << "Цвет клеток одинаковый.";
    else
        std::cout << "Цвет клеток разный.";
}

