
#include <stdio.h>
#include <math.h>

float R_1,R_2,Rt,x,y;

void main()
{
    printf("\nВведите координаты точки:\n");
    printf("x="); scanf("%f",&x);
    printf("y="); scanf("%f",&y);
    printf("\nВведите радиус окружности 1:\n");
    printf("R_1="); scanf("%f",&R_1);
    printf("\nВведите радиус окружности 2:\n");
    printf("R_2="); scanf("%f",&R_2);
    Rt=hypotf(x,y);
    
    if (((R_1<=Rt) && (Rt<=R_2)) || ((R_2<=Rt) && (Rt<=R_1)))
    {
        printf("\nТочка(%5.2f, %5.2f) ", x , y); 
        printf("принадлежит кольцу, образованному двумя концентрическими окружностями радиусами %5.2f, %5.2f \n", R_1,R_2);
    }
    else 
    {
        printf("\nТочка(%5.2f, %5.2f) ", x , y); 
        printf("не принадлежит кольцу, образованному двумя концентрическими окружностями радиусами %5.2f, %5.2f \n", R_1,R_2);
    }
}  
