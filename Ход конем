#include <iostream>
#include <math.h>

void check_horse(int ax, int ay, int bx, int by){
    setlocale(0, "");
    int x1, x2, x3, x4, x5, x6, x7, x8, y1, y2, y3, y4, y5, y6, y7, y8;

    if ((((abs(ax - bx)) == 1) && ((abs(ay - by)) == 2)) || (((abs(ax - bx)) == 2) && ((abs(ay - by)) == 1))) {
        std::cout << "Ход конем сделан в один ход.";
    } else {
        x1 = ax + 1;
        y1 = ay + 2;

        x2 = ax - 1;
        y2 = ay + 2;

        x3 = ax - 2;
        y3 = ay + 1;

        x4 = ax - 2;
        y4 = ay - 1;

        x5 = ax + 2;
        y5 = ay + 1;

        x6 = ax + 2;
        y6 = ay - 1;

        x7 = ax + 1;
        y7 = ay - 2;

        x8 = ax - 1;
        y8 = ay - 2;

        if (((abs(x1 - bx) == 1) && (abs(y1 - by) == 2)) || ((abs(x1 - bx) == 2) && (abs(y1 - by) == 1)))
        {
            if ((x1 < 8) && (y1 < 8) && (x1 > 0) && (y1 > 0)) {
                std::cout << "Ход конем будет сделан в два хода. ";
                std::cout << "Номер клетки " << x1 << " " << y1 << "\n";
            }

        }

        if (((abs(x2 - bx) == 1) && (abs(y2 - by) == 2)) || ((abs(x2 - bx) == 2) && (abs(y2 - by) == 1)))
        {
            if ((x2 < 8) && (y2 < 8) && (x2 > 0) && (y2 > 0)) {
                std::cout << "Ход конем будет сделан в два хода. ";
                std::cout << "Номер клетки " << x2 << " " << y2 << "\n";
            }
        }

        if (((abs(x3 - bx) == 1) && (abs(y3 - by) == 2)) || ((abs(x3 - bx) == 2) && (abs(y3 - by) == 1)))
        {
            if ((x3 < 8) && (y3 < 8) && (x3 > 0) && (y3 > 0)) {
                std::cout << "Ход конем будет сделан в два хода. ";
                std::cout << "Номер клетки " << x3 << " " << y3 << "\n";
            }
        }

        if (((abs(x4 - bx) == 1) && (abs(y4 - by) == 2)) || ((abs(x4 - bx) == 2) && (abs(y4 - by) == 1)))
        {
            if ((x4 <= 8) && (y4 <= 8) && (x4 > 0) && (y4 > 0)) {
                std::cout << "Ход конем будет сделан в два хода. ";
                std::cout << "Номер клетки " << x4 << " " << y4 << "\n";
            }
        }

        if (((abs(x5 - bx) == 1) && (abs(y5 - by) == 2)) || ((abs(x5 - bx) == 2) && (abs(y5 - by) == 1)))
        {
            if ((x5 <= 8) && (y5 <= 8) && (x5 > 0) && (y5 > 0)) {
                std::cout << "Ход конем будет сделан в два хода. ";
                std::cout << "Номер клетки " << x5 << " " << y5 << "\n";
            }
        }

        if (((abs(x6 - bx) == 1) && (abs(y6 - by) == 2)) || ((abs(x6 - bx) == 2) && (abs(y6 - by) == 1)))
        {
            if ((x6 <= 8) && (y6 <= 8) && (x6 > 0) && (y6 > 0)) {
                std::cout << "Ход конем будет сделан в два хода. ";
                std::cout << "Номер клетки " << x6 << " " << y6 << "\n";
            }

        }

        if (((abs(x7 - bx) == 1) && (abs(y7 - by) == 2)) || ((abs(x7 - bx) == 2) && (abs(y7 - by) == 1)))
        {
            if ((x7 <= 8) && (y7 <= 8) && (x7 > 0) && (y7 > 0)) {
                std::cout << "Ход конем будет сделан в два хода. ";
                std::cout << "Номер клетки " << x7 << " " << y7 << "\n";
            }
        }

        if (((abs(x8 - bx) == 1) && (abs(y8 - by) == 2)) || ((abs(x8 - bx) == 2) && (abs(y8 - by) == 1)))
        {
            if ((x8 <= 8) && (y8 <= 8) && (x8 > 0) && (y8 > 0)) {
                std::cout << "Ход конем будет сделан в два хода. ";
                std::cout << "Номер клетки " << x8 << " " << y8 << "\n";
            }
        }

    }

}

void test(){
    int a1x1 = 1;
    int a1y1 = 1;
    int b1x2 = 3;
    int b1y2 = 1;
    check_horse(a1x1, a1y1, b1x2, b1y2);
    std::cout << "Ожидается: ";
    std::cout << "Ход конем будет сделан в два хода. " << "Номер клетки " << 2 << " " << 3;
}

